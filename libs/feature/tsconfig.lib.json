  "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx", "src/publishers/_main/PublisherAddModal.tsx", "src/publishers/EditPublisherOutlinesModal.tsx", "src/publishers/name/NameEditModal.tsx"]
